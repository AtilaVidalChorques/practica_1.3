# Dominio o nombre del servidor
SERVER_NAME="localhost"

# Ruta donde se almacenarán los certificados
SSL_DIR="/etc/ssl/selfsigned"

# Nombre base de los archivos de certificado
SSL_KEY="${SSL_DIR}/${SERVER_NAME}.key"
SSL_CRT="${SSL_DIR}/${SERVER_NAME}.crt"

# País, provincia, organización (para el certificado)
SSL_COUNTRY="ES"
SSL_STATE="Valencia"
SSL_LOCALITY="Aielo de Malferit"
SSL_ORGANIZATION="IesPorçons"
SSL_ORG_UNIT="2ASIX"
SSL_COMMON_NAME="Jodopa"

# Duración del certificado (en días)
SSL_DAYS=365

# Ruta al archivo de configuración SSL de Apache
APACHE_SSL_CONF="/etc/apache2/sites-available/default-ssl.conf"

# Nombre del sitio SSL en Apache
APACHE_SSL_SITE="default-ssl"
